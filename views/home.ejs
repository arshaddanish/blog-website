<%- include("partials/header") -%> 

<h1>Home</h1>

<p><%= content %></p>


<% posts.forEach(function(post) { %>

    <h1><%= post.titleText %></h1>

<%  if(post.postText.length > 100) { %>

        <p>
                <%= post.postText.substring(0,100) + " ... " %>
                <a href="<%= '/posts/' + post.titleText %>">Read more</a>
        </p>

<% } else { %> 
        <p><%= post.postText %> </p>
<% } %>

<% }) %>

<%- include("partials/footer") -%>